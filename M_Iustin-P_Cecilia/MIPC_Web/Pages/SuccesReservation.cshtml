<style>
    .confirmation-page .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 1.5rem;
    }

    .card-body {
        padding: 40px;
    }

    .display-1 {
        font-size: 80px;
    }

    .alert {
        font-size: 1.1rem;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-size: 1.2rem;
        text-transform: uppercase;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-close {
        opacity: 1;
    }
</style>