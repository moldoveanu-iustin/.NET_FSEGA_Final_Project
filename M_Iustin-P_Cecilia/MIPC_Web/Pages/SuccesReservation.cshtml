@page
@model SuccesReservationModel
@{
    ViewData["Title"] = "Your ride is confirmed!";
}
<div class="confirmation-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle display-1 mb-4" style="color:#E8BE14"></i>
                        <h2 class="mb-3">Cursa dumneavoastra este confirmata!</h2>
                        <p class="font-weight-bold">ID-ul rezervarii: <span>@Model.ReservationId</span></p>
                        <p class="mb-4">O notificare a fost trimisa spre contul dumneavoastra!</p>

                        <a class="btn btn-lg px-5" href="/Profile" role="button" style="background-color:#fff8e1;">Vizualizeaza-ti rezervarea</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
